.certificates-slider
    padding-top 40px
    margin-top 140px
    +below(375px)
            margin-top 70px

    &__wrap
        display flex
        flex-direction row
        justify-content space-between
        +below(375px)
            flex-direction column

    &__list
        margin-top 20px
        position relative
        display flex
        flex-flow row nowrap

    &__title
        font-family $Play
        font-style normal
        font-weight 700
        font-size 64px
        line-height 90px
        color $c-black
        +below(768px)
            font-size 32px
            line-height 38px

    &__text
        padding-top 315px
        font-family $Play
        font-style normal
        font-weight 400
        font-size 23px
        line-height 32px
        color $c-black
        +below(768px)
            font-size 18px
            line-height 25px

        +below(375px)
            padding-top 70px

    &__slider
        display flex
        flex-direction row
        justify-content flex-end
        align-items center
        margin-top 25px
        +below(375px)
            justify-content flex-start

    &__swap
        cursor pointer
        position relative
        margin-right 20px
        width 60px
        height 60px
        background $c-orange_1

        &:last-child
            margin-right 0

    &__left
        margin 10px
        width 40px
        transform rotate(-180deg)

        img
            width 100%

    &__rigth
        margin 10px
        width 40px

        img
            width 100%

    &__item
        width 380px
        margin-right 30px
        flex-shrink 0
        padding 40px 45px
        background $c-white_2
        +below(1200px)
            width 360px
            padding 35px

        +below(768px)
            width 330px
            padding 25px
            &:last-child
                display none

        +below(375px)
            width 160px
            padding 10px
            margin-right 20px

    &__main_image
        position absolute
        width 5%
        top 0

        img
            width 100%

        +below(768px)
            width 6%

        +below(375px)
            width 5%
            
    .slick
        position relative
        height 1200px

    .slick-slide
        width 380px
        height 100%
        margin 100px 20px 0 0

    .slick-arrow
        position absolute
        top -80px
        font-size 0
        border 3px solid $c-orange_1
        z-index 10
        width 60px
        height 60px

    .slick-prev
        right 80px
        background url('../../images/slider-prev.png') no-repeat center
        +below(375px)
            right 275px

    .slick-next
        right 0
        background url('../../images/slider-next.png') no-repeat center
        +below(375px)
            right 195px