.consultation
    padding 80px 0
    margin-top 150px
    background url('../../images/consultation_bg.jpg') no-repeat center
    width 100%
    +below(1200px)
        margin-top 70px


    &__title
        font-family $Play
        font-style normal
        font-weight 700
        font-size 64px
        line-height 70px
        color $c-black
        +below(768px)
            font-size 32px
            line-height 38px

    &__subtitle
        padding-top 20px
        font-family $Play
        font-style normal
        font-weight 400
        font-size 32px
        line-height 45px
        color $c-black
        +below(768px)
            font-size 26px
            line-height 36px
    
    &__form
        max-width 690px
        width 100%
        +below(375px)
            max-width 340px
    
    &__form-info
        font-family $Play
        font-weight 400
        font-size 16px
        line-height 22px
        color $c-white
        padding-bottom 10px

        +below(768px)
            font-size 13px
            line-height 18px


    &__item
        display flex
        flex-direction column
        justify-content flex-start

        &:first-child
            padding-left 0px

        input
            &::placeholder
                font-family $Play
                font-weight 400
                font-size 18px
                line-height 23px
                color $c-black
                +below(375px)
                    font-size 16px
                    line-height 21px

    &__input
        width 100%
        margin-top 30px
        height 105px
        border-radius 10px
        border none
        background $c-white_2

        &:first-child
            margin-top 0

        &_error
            background $c-pink
            border 1px solid $c-red

        &_label
            padding-top 15px
            padding-left 25px
            font-family $Play
            font-style normal
            font-weight 400
            font-size 23px
            line-height 34px
            color $c-grey
            +below(375px)
                font-size 20px
                line-height 30px

        &_name
            padding-left 0px
            height 50px

        &_email
            padding-left 0px
            height 50px
        
        &_question
            padding-left 0px
            height 50px

    &__button
        width 160px
        height 50px
        margin-top 30px
        background-color $c-orange_1
        border none
        color $c-orangemain
        font-family $Play
        font-style normal
        font-weight 700
        font-size 16px
        line-height 19px

    &__equipment
        position absolute
        bottom 70px
        left 735px
        width 790px
        height 626px
        
        +below(1200px)
            display none

        img
            width 100%

    &__image
        position relative