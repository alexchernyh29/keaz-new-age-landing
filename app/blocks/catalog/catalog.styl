.catalog
    padding 50px 0 100px
    margin-top 150px
    background url('../../images/catalog_bg.jpg') no-repeat center
    width 100%
    +below(768px)
        margin-top 30px

    &__title
        font-family $Play
        font-style normal
        font-weight 700
        font-size 64px
        line-height 90px
        color $c-black
        +below(768px)
            font-size 32px
            line-height 38px

        +below(375px)
            font-size 26px
            line-height 29px

    &__text
        font-family $Play
        font-style normal
        font-weight 700
        font-size 32px
        line-height 35px
        color $c-blue
        transition color .3s

        &:hover
            color $c-orangemain

        +below(768px)
            font-size 26px
            line-height 29px

        +below(375px)
            font-size 20px
            line-height 23px

    &__wrap
        padding-top 30px
        display flex
        flex-direction row nowrap
        justify-content flex-start
        align-items center
        z-index 99

        +below(768px)
            padding-top 25px

        +below(375px)
            padding-top 20px

    &__link
        width 46px
        margin-left 10px

        img
            width 100%

        +below(768px)
            width 34px
            margin-left 10px

    &__equipment
        position absolute
        bottom -200px
        left 670px
        width 870px
        height 680px
        +below(1200px)
            display none

        img
            width 100%

    &__image
        position relative

