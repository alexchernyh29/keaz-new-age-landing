.crash-tests
    padding-top 140px
    +below(1200px)
        padding-top 0

    &__container
        position relative
        width 100%

    &__content
        display flex
        align-items center
        padding-top 30px

    &__item
        display flex
        flex-direction row
        justify-content center
        align-items center

        +below(1199px)
            flex-direction column
    &__card
        display flex
        flex-flow row nowrap
        align-items stretch

        +below(1199px)
            flex-direction column

    &__title
        font-weight 700
        font-size 64px
        line-height 90px
        text-align center
        +below(968px)
            font-size 32px
            padding 0 40px

        +below(768px)
            line-height 38px

        +below(420px)
            padding 0 20px

    &__preview__img
        width 100%

        img
            width 100%

    &__description
        display flex
        flex-direction column
        justify-content space-between
        padding-left 40px
        width 50%

        +below(1199px)
            width 100%
            padding 30px 40px 0

        +below(420px)
            padding 35px 20px

    &__description__title
        font-weight 700
        font-size 40px
        line-height 56px

        +below(968px)
            font-size 26px

        +below(768px)
            line-height 36px


    &__text
        padding 13px 0 0 0
        font-weight 400
        font-size 23px
        line-height 32px
        width 65%

        +below(1199px)
            width 100%

        +below(968px)
            width 100%
            font-size 18px

        +below(768px)
            font-size 18px
            line-height 25px

    &__actions
        margin-top 20px
    
    &__arrow
        font-size 0
        border none
        z-index 10
        width 60px
        height 60px
        transition opacity .3s

        &_prev
            background url('../../images/slider-prev.png') no-repeat center
        
        &_next
            margin-left 10px
            background url('../../images/slider-next.png') no-repeat center

    .slick
        position relative
        height 1000px

    .slick-slide
        height 100%

        .crash-tests__arrow
            opacity 0

        &.slick-active
            .crash-tests__arrow
                opacity 1
