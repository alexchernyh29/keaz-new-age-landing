.promo
    padding 135px 0
    background url('../../images/new-era.jpg') no-repeat center
    width 100%
    +below(1200px)
        background url('../../images/new-era-vertical.jpg') no-repeat center
        height 1200px
        padding 0 0
    +below(768px)
        background url('../../images/new-era-table.jpg') no-repeat center
        height 920px
    +below(620px)
        background url('../../images/new-era-mobile.jpg') 0 0/100% no-repeat
        height 900px
    +below(425px)
        height 740px

    &__description
        +below(1200px)
            position absolute
            top 940px
            left 40px
        +below(768px)
            top 670px
        +below(620px)
            top 530px
            left 20px
        +below(425px)
            top 400px
        +below(368px)
            top 380px
        

    &__title
        font-family 'Play'
        font-style normal
        font-weight 700
        font-size 25px
        line-height 29px
        color $c-orangemain

    &__name
        max-width 440px
        padding-top 6px
        font-family 'Play'
        font-weight 700
        font-size 63px
        line-height 110%
        color $c-blue
        +below(1200px)
            max-width none
        +below(768px)
            font-size 47px
        +below(425px)
            width 330px

    &__text
        position relative
        max-width 407px
        font-family 'Play'
        font-style normal
        font-weight 400
        font-size 26px
        line-height 30px
        color $c-black
        padding-top 15px
        +below(1200px)
            max-width none
        +below(586px)
            width 100%

    &__russian-flag
        padding 10px

    &__button
        font-family 'Play'
        font-style normal
        font-weight 700
        font-size 16px
        line-height 19px
        color $c-white
        margin-top 50px
        min-width 252px
        min-height 51px
        background $c-orangemain
        border none
        +below(586px)
           margin-top 30px

    &__equipment
        position absolute
        left 40%
        top 90px
        +below(1480px)
            left 40%
            top 200px
        +below(1200px)
            left 5%
            top 11%
        +below(1140px)
            left 10%
            top 110px
        +below(968px)
            left 10%
            top 150px
        +below(768px)
            left 5%
            top 10%
        img
            width 100%
            +below(1200px)
                width 94%
            +below(768px)
                width 93%
